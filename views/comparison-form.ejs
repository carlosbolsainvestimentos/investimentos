<!DOCTYPE html>
<html>
  <head>
    <title>Comparar Plataformas</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="container my-4">
    <h1>Comparar Plataformas</h1>

    <form action="/comparison" method="POST" class="row gy-3">
      <div class="col-12 col-md-6">
        <label for="valorEmReais" class="form-label">Valor em Reais a comprar:</label>
        <input
          type="number"
          step="0.01"
          class="form-control"
          id="valorEmReais"
          name="valorEmReais"
          required
        />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Comparar</button>
        <a href="/dashboard" class="btn btn-secondary">Voltar</a>
      </div>
    </form>
  </body>
</html>
