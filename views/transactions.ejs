<!DOCTYPE html>
<html>
  <head>
    <title>Transações</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="container my-4">
    <h1>Transações</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tipo</th>
          <th>USD</th>
          <th>Cotação (R$)</th>
          <th>Taxas (R$)</th>
          <th>Data</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(t => { %>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.type %></td>
          <td><%= t.usd_amount %></td>
          <td><%= t.brl_rate %></td>
          <td><%= t.fees %></td>
          <td><%= t.date %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="my-3">
      <a href="/transactions/new" class="btn btn-primary">Nova Transação</a>
      <a href="/dashboard" class="btn btn-secondary">Voltar</a>
    </div>
  </body>
</html>
